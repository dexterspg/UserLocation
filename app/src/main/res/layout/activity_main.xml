<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dexter.myapplication.MainActivity">


    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Longitude"
        android:layout_margin="30dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/mapButton" />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="138dp"
        android:text="SHOW MY LOCATION" />

    <TextView
        android:id="@+id/Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/locationButton"
        android:layout_below="@+id/locationButton"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="78dp" />

    <TextView
        android:id="@+id/Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Latitude"
        android:layout_below="@+id/Latitude"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Latitude"
        android:layout_alignBottom="@+id/Latitude"
        android:layout_alignParentStart="true"
        android:layout_marginStart="69dp"
        android:text="Latitude" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Longitude"
        android:layout_alignBottom="@+id/Longitude"
        android:layout_alignEnd="@+id/textView11"
        android:text="Longitude" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time of Access"
        android:layout_marginStart="37dp"
        android:layout_alignBaseline="@+id/timeTextView"
        android:layout_alignBottom="@+id/timeTextView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/textView11"
        android:onClick="goToMapView"
        android:text="View Map" />
</RelativeLayout>